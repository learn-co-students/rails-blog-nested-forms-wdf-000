<h1>New post</h1>

<%= render 'form' %>

<%= link_to 'Back', posts_path %>


<%= form_for @post do |f| %>
<div class="field" >
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name%>
</div>

  <%= f.fields_for :tags, Tag.new do |tag_builder|%>
    <%= tag_builder.text_field :name%>
  <% end %>



  <%= f.submit %>
<% end %>
