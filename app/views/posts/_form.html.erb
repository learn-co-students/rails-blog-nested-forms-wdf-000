<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, id: "Name" %><br>
    <%= f.label :content %><br>
    <%= f.text_field :content, id: "Content"%><br>
    Tags:
  </div>

  <div class="fields">
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %><br><br>
      <%= f.fields_for :tags, @post.tags.build do |tag| %>
        <%= tag.text_field :name %><br><br>

      </div>
  <%end%>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
